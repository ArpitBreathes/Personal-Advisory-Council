rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId);
      allow delete: if false; // Prevent user deletion through Firestore
    }
    
    // Personas collection
    match /personas/{personaId} {
      // Anyone authenticated can create a persona
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Public personas can be read by anyone authenticated
      // Private personas can only be read by owner
      allow read: if isAuthenticated() && 
                     (resource.data.isPublic == true || 
                      resource.data.userId == request.auth.uid);
      
      // Only owner can update or delete
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      
      // Allow updates by owner OR allow upvote count updates by anyone
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid ||
                        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes']) &&
                         request.resource.data.upvotes == resource.data.upvotes + 1));
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Only owner can read/write
      allow read, write: if isAuthenticated() && 
                            resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
        allow create: if isAuthenticated();
      }
    }
    
    // Persona upvotes collection
    match /personaUpvotes/{upvoteId} {
      // Anyone can read upvotes
      allow read: if isAuthenticated();
      
      // Users can create upvote for themselves
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own upvotes
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
  }
}
